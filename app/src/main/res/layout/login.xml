<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_root_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/image1"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:background="@drawable/login_pic1" />

<!--     <ImageView -->
<!--         android:id="@+id/image2" -->
<!--         android:layout_width="wrap_content" -->
<!--         android:layout_height="wrap_content" -->
<!--         android:layout_alignBottom="@id/image1" -->
<!--         android:layout_centerHorizontal="true" -->
<!--         android:background="@drawable/login_pic2" /> -->

  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image1"
        android:layout_marginLeft="28.0dip"
        android:layout_marginRight="28.0dip"
        android:layout_marginTop="10.0dip"
        android:orientation="vertical" >

      	
      	<LinearLayout android:background="@drawable/editaccount" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
	        <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/acount_icon"
	        android:layout_marginLeft="5dp"/>
      	    <EditText
	            android:id="@+id/accounts"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@android:color/white"
	            android:hint="@string/login_hint_account"
	            android:maxLength="16"
	            android:maxLines="1"
	            android:singleLine="true"
	            android:paddingLeft="20.0dip"
	            android:textColor="#ff1d1d1d"
	            android:textColorHint="#ff666666"
	            android:textSize="16.0sp" />
	    </LinearLayout>
	        
      	        

      	
      	<LinearLayout android:layout_marginTop="25.0dip" android:background="@drawable/editpassword" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
	            <ImageView
		        android:layout_width="30dp"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:src="@drawable/password_icon"/>
	            <EditText
	            android:id="@+id/password"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@android:color/white"
	            android:gravity="center_vertical"
	            android:hint="@string/login_hint_password"
	            android:inputType="textPassword"
	            android:maxLength="16"
	            android:maxLines="1"
	            android:paddingLeft="20.0dip"
	            android:textColor="#ff1d1d1d"
	            android:textColorHint="#ff666666"
	            android:textSize="16.0sp" />
	    </LinearLayout>

		<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.0dip">
      	
	        <Button
	        android:id="@+id/login"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:background="@drawable/selector_btn_login"
	      	android:layout_centerVertical="true"
	        android:text="@string/login_btn_login"
	        android:textColor="#ffffffff"
	        android:textSize="18.0sp" />
	        
	        <CheckBox
	         android:id="@+id/auto_save_password"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_alignParentRight="true"
	         android:layout_centerVertical="true"
	         android:background="@null"
	         android:button="@null"
	         android:checked="true"
	         android:drawableLeft="@drawable/selector_checkbox1"
	         android:drawablePadding="4.0dip"
	         android:text="@string/login_checkbox_save_password"
	         android:textColor="#3e3e3e"
	         android:textSize="18.0sp" />
        
    	</RelativeLayout>
    	
		
		<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip" 
        android:gravity="center_vertical">
	       <TextView
	        android:id="@+id/tvRegister"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:clickable="true"   
	        android:linksClickable="true"  
	        android:textColor="#3e3e3e"
	        android:textSize="18.0sp"  
	        android:text="@string/login_tv_register" />
	        	    	        	    	
		    <TextView
	        android:id="@+id/tvForgetPassword"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:clickable="true"     
	        android:linksClickable="true"
	        android:textColor="#3e3e3e"
	        android:textSize="18.0sp"  
	        android:text="@string/login_tv_forget_password" />
		</RelativeLayout>
		
		
    </LinearLayout>

