<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
        <Button
    	android:id="@+id/btn_getpos"
    	android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="GET"
        android:textColor="@color/black">   	    
    	</Button>
    	<Button
    	android:id="@+id/btn_clearPos"
    	android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="CLEAR"
        android:textColor="@color/black">   	    
    	</Button>	
    	
    	<Button
    	android:id="@+id/btn_switchProvider"
    	android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="SWITCH "
        android:textColor="@color/black">   	    
    	</Button>			
    	
    	<TextView
    	android:id="@+id/tv_provider"
    	android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="">   	    
    	</TextView>
    </LinearLayout>

        <TextView
    	android:id="@+id/tv_curPos"
    	android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:text="curPos:">   	    
    	</TextView>
   <View android:background="@drawable/horizontal_line" android:layout_width="fill_parent" android:layout_height="1.0px" />
        	
   <ScrollView
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content">
    	<TextView
    	android:id="@+id/tv_gpstext"
    	android:layout_width="fill_parent" 
        android:layout_height="wrap_content">   	    
    	</TextView>
   </ScrollView>

    
    
</LinearLayout>