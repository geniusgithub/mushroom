<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:zhy="http://schemas.android.com/apk/res/com.mobile.yunyou"
    android:id="@+id/rootView"
    android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/act_content_bg">
  
    <RelativeLayout 
        android:orientation="vertical"
        android:background="@drawable/title_bar" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
        <Button android:id="@+id/btn_back" android:layout_centerVertical="true" android:paddingLeft="5dp" android:textSize="18.0sp" android:textColor="#ffffff"  android:background="@drawable/selector_btn_back" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:layout_centerInParent="true" android:textSize="20.0sp" android:textColor="@color/white"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/setting_text_person" />   
     		 <Button 
             android:id="@+id/btn_save"  
             android:layout_marginRight="10dp" 
             android:layout_alignParentRight="true" 
             android:layout_centerVertical="true" 
             android:layout_width="wrap_content" 
             android:layout_height="wrap_content"
             android:textColor="#ffffff"
             android:textSize="18sp"
             android:background="@null"
             android:text="@string/safe_text_save"/>
   </RelativeLayout>
      
    <LinearLayout 
        android:orientation="vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent">

        <LinearLayout 
            style="@style/leba_bg_layout">
                <RelativeLayout
                    style="@style/leba_bg_single_layout" android:clickable="false">
                    <TextView style="@style/text_style1" android:text="@string/setting_text_head"  android:layout_centerVertical="true" android:layout_weight="1.0" />
	                <ImageView 
	                    android:id="@+id/iv_arrow" 
	                    android:layout_width="wrap_content" 
	                    android:layout_height="wrap_content" 
	                    android:layout_marginRight="12.0dip" 
	                    android:src="@drawable/setting_arrow" 
	                    android:layout_alignParentRight="true"
	                    android:layout_centerVertical="true"/>
               
	                <com.mobile.yunyou.widget.CustomImageView
		        	android:id="@+id/iv_head"
		        	android:layout_width="@dimen/headincon_width"
		    		android:layout_height="@dimen/headincon_width"
		    		android:layout_toLeftOf="@id/iv_arrow"
		    		android:layout_marginRight="12.0dip" 
		   			zhy:src="@drawable/head_icon"
            		zhy:type="circle"
		    		android:layout_centerVertical="true">
		        	</com.mobile.yunyou.widget.CustomImageView>
	              </RelativeLayout>
            
        </LinearLayout>    
            
        <LinearLayout 
            style="@style/leba_bg_layout">                  
        
                <LinearLayout
                    style="@style/leba_bg_top_layout" android:clickable="false">
                    <TextView style="@style/text_style1" android:text="@string/setting_text_account" android:layout_weight="1.0" />
	                <TextView android:id="@+id/tv_account" style="@style/text_style2" android:layout_weight="1" />      
                    <ImageView android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12.0dip" android:src="@drawable/setting_arrow"/>
                </LinearLayout>
                
                <View android:background="@color/shape_line" android:layout_width="fill_parent" android:layout_height="1.0px" />
                
                 <LinearLayout android:id="@+id/ll_changepwd"
                 	 style="@style/leba_bg_mid_layout">
                     <TextView style="@style/text_style1" android:text="@string/setting_text_pwd" android:layout_weight="1.0" />
                     <TextView android:id="@+id/tv_changepwd" style="@style/text_style2" android:layout_weight="1" />
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12.0dip" android:src="@drawable/setting_arrow"/>
                 </LinearLayout>
                
                 <View android:background="@color/shape_line" android:layout_width="fill_parent" android:layout_height="1.0px" />
           
                 <LinearLayout android:id="@+id/ll_emailset"
                 	 style="@style/leba_bg_bottom_layout">
                     <TextView style="@style/text_style1" android:text="@string/setting_text_email" android:layout_weight="1.0" />
                     <TextView android:id="@+id/tv_email" style="@style/text_style2" android:layout_weight="1" />
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12.0dip" android:src="@drawable/setting_arrow"/>
                 </LinearLayout>
                
<!--                  <View android:background="@color/shape_line" android:layout_width="fill_parent" android:layout_height="1.0px" /> -->
                      
       
<!--                 <LinearLayout android:id="@+id/ll_phoneset" -->
<!--                     style="@style/leba_bg_bottom_layout"> -->
<!--                     <TextView style="@style/text_style1" android:text="@string/setting_text_phone" android:layout_weight="1.0" /> -->
<!--                     <TextView android:id="@+id/tv_phone"  style="@style/text_style2" android:layout_weight="1" /> -->
<!--                     <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12.0dip" android:src="@drawable/setting_arrow"/> -->
<!--                 </LinearLayout>      -->
                                        
       </LinearLayout>
       
        
       <LinearLayout 
                style="@style/leba_bg_layout">                  
          
                <LinearLayout android:id="@+id/ll_nameset"
                    style="@style/leba_bg_top_layout">
                    <TextView style="@style/text_style1" android:text="@string/setting_text_name" android:layout_weight="1.0" />
                    <TextView android:id="@+id/tv_truename" style="@style/text_style2" android:layout_weight="1" />
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12.0dip" android:src="@drawable/setting_arrow"/>
                </LinearLayout>
                
                <View android:background="@color/shape_line" android:layout_width="fill_parent" android:layout_height="1.0px" />
                
        
                 <LinearLayout android:id="@+id/ll_sexset"
                 	 style="@style/leba_bg_mid_layout">
                     <TextView style="@style/text_style1" android:text="@string/setting_text_sex" android:layout_weight="1.0" />
                     <TextView android:id="@+id/tv_sex"  style="@style/text_style2" android:layout_weight="1" />
                     <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12.0dip" android:src="@drawable/setting_arrow"/>
                 </LinearLayout>
                
                 <View android:background="@color/shape_line" android:layout_width="fill_parent" android:layout_height="1.0px" />
                      
       
                <LinearLayout android:id="@+id/ll_birthdayset"
                    style="@style/leba_bg_bottom_layout">
                    <TextView style="@style/text_style1" android:text="@string/setting_text_birthday" android:layout_weight="1.0" />
                    <TextView android:id="@+id/tv_birthday" style="@style/text_style2" android:layout_weight="1" />
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12.0dip" android:src="@drawable/setting_arrow"/>
                </LinearLayout>                             
            </LinearLayout>

        
